<script>
    //baseImage('#sb-slider', 12);
    $(function () {
        //改变导航默认状态
        navEven('基地介绍');
        // 向后台发请求，拿到轮播图数据
        $.ajax({
            async: true,
            beforeSend: function () { },
            complete: function () { },
            url: "/BaseIntroduce/GetBaseSlider",
            type: "GET",
            dataType: "json",
            success: function (data) {
                var data = JSON.stringify(data);
                data = JSON.parse(data);
                //调用DOM操作函数
                baseSlider(data);
            },
            error: function (data) {
                console.log(data.status, data.statusText);
            }
        });

        //封装DOM操作
        function baseSlider(data) {
            var baseSliderJson = JSON.parse(data.baseSlider);
            var sliderNum = baseSliderJson.length;
            if (sliderNum <= 0) {
                sliderNum = 1;
                baseImage('#sb-slider', 1);
                return false;
            }
            else {
                baseImage('#sb-slider', sliderNum);
                for (var k = 0; k < sliderNum; k++) {
                    $('#slider .wrapper #sb-slider li a img')[k].src = baseSliderJson[k].image;
                }
            }
        }
    });
</script>

